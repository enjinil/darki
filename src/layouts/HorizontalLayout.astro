---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={title} />
  </head>
  <body>
    <div class="page page-horizontal">
      <Header/>
      <main>
        <div class="container">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
