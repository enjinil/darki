---
import HorizontalLayout from "../layouts/HorizontalLayout.astro";
import PageHeader from "../components/PageHeader.astro";
import PageBody from "../components/PageBody.astro";
---

<HorizontalLayout title="Profile | Darki Admin">
  <PageHeader title="Profile" />
  <PageBody>
    <ul class="breadcrumb mb-xl">
      <li class="breadcrumb__item"><a href="#">Home</a></li>
      <li class="breadcrumb__item"><a href="#">Users</a></li>
      <li class="breadcrumb__item"><span>Profile</span></li>
    </ul>
    <div class="card mb-xxl">
      <div class="grid-3">
        <div class="h-full py-xl stack align-center text-center border-r">
          <div class="w-8rem mb-lg">
            <div
              class="img-circle shadow"
              style="background-image: url(/images/profile.jpg);"
            >
            </div>
          </div>
          <div class="text-h2">Jean Ken</div>
          <div class="text-secondary">Lead Developer</div>

          <!-- menu -->
          <div class="list list--links w-full mt-xl border-t border-b">
            <a class="list__item is-active">Edit Profile</a>
            <a class="list__item">Settings</a>
            <a class="list__item">Log Out</a>
          </div>
        </div>
        <div class="card__body py-xl colspan-2">
          <div class="form form--horizontal w-32rem">
            <!-- field - profile_image -->
            <div class="field">
              <label for="" class="field__label">Profile Image</label>
              <div class="field__control">
                <div class="w-8rem mb-lg">
                  <div
                    class="img-1x1 rounded shadow"
                    style="background-image: url(/images/profile.jpg);"
                  >
                  </div>
                </div>
                <div class="button-group">
                  <button title="Replace profile" class="button button--primary button--icon">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      height="1em"
                      width="1em"
                      ><rect x="3" y="3" width="18" height="18" rx="2" ry="2"
                      ></rect><circle cx="8.5" cy="8.5" r="1.5"
                      ></circle><polyline points="21 15 16 10 5 21"
                      ></polyline></svg
                    >
                  </button>
                  <button
                    title="Remove profile"
                    class="button button--danger button--icon"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="1em"
                      height="1em"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      ><polyline points="3 6 5 6 21 6"></polyline><path
                        d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
                      ></path></svg
                    >
                  </button>
                </div>
              </div>
            </div>
            <!-- field - username -->
            <div class="field">
              <label for="" class="field__label">Username</label>
              <div class="field__control">
                <input
                  class="input"
                  type="text"
                  placeholder="Enter username"
                  value="Jean Ken"
                />
              </div>
            </div>
            <!-- field - email -->
            <div class="field">
              <label for="" class="field__label">Email</label>
              <div class="field__control">
                <input
                  class="input"
                  type="text"
                  placeholder="Enter email"
                  value="jeanken@wolves.mail"
                />
              </div>
            </div>
            <!-- field - email -->
            <div class="field">
              <label for="" class="field__label">About</label>
              <div class="field__control">
                <textarea
                  class="textarea"
                  placeholder="Describe yourself"
                  value="kamikazeboy@"
                />
              </div>
            </div>
            <!-- field - job -->
            <div class="field">
              <label for="" class="field__label">Job</label>
              <div class="field__control">
                <input
                  class="input"
                  type="text"
                  placeholder="Enter job"
                  value="Lead Developer"
                />
              </div>
            </div>
            <!-- actions -->
            <div class="field">
              <div class="field__label"></div>
              <div class="my-lg">
                <button class="button button--primary">Save Changes</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </PageBody>
</HorizontalLayout>
